<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="botonNumerico">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">160px</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/neutro</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">8px</item>
        <item name="android:paddingEnd">8px</item>

    </style>

    <style name="botonOperacion">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">160px</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shape">oval</item>
        <item name="backgroundTint">@color/secundario</item>
        <item name="android:layout_weight">1.4</item>
        <item name="android:layout_margin">8px</item>
        <item name="android:paddingHorizontal">8sp</item>
        <item name="android:layout_marginLeft">32px</item>
    </style>


    <style name="botonIgual">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">80sp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <color name="neutro">#a4a5c5</color>
    <color name="secundario">#0080ff</color>
</resources>